<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 
 <mapper namespace="com.mapper.PrivilegeMapper">
     <insert id="add" parameterType="Privilege">
        insert into privilege values(null,#{priName},#{parentId},#{priType},#{priNode},#{url},#{priPs})
     </insert>
     <delete id="remove" parameterType="int">
        delete from privilege where priId = #{value}
     </delete>
     <update id="edit" parameterType="Privilege">
        update privilege set priName=#{priName},parentId=#{parentId},
        priType=#{priType},priNode=#{priNode},url=#{url},priPs=#{priPs}
        where priId=#{priId}
     </update>
     
     <resultMap type="Privilege" id="PrivilegeMap">
         <id column="priId" property="priId"/>
         <result column="priName" property="priName"/>
         <result column="parentId" property="parentId"/>
         <result column="priType" property="priType"/>
         <result column="priNode" property="priNode"/>
         <result column="priAlias" property="priAlias"/>
         <result column="url" property="url"/>
         <result column="priPs" property="priPs"/>
         <association property="nodes" column="priId" select="com.mapper.PrivilegeMapper.getPrivilegeByParentId"></association>
     </resultMap>
     
     <select id="getPrivilegeById" parameterType="int" resultMap="PrivilegeMap">
         select * from privilege where priId = #{value}
         <if test="rid!=null">
             
         </if>
     </select>
     
     <select id="query" resultType="Privilege" parameterType="java.util.Map">
         select * from privilege where parentId = 0
         <if test="priType!=null">
             and priType = #{priType}
         </if>
         <if test="priNode!=null">
             and priNode = #{priNode}
         </if>
     </select>
     
     <select id="getPrivilegeByRoleId" parameterType="int" resultMap="PrivilegeMap">
         select * from privilege where priId in 
         (select priId from r_p where roleId = #{value})
     </select>
     
     <select id="getPrivilegeByParentId" parameterType="int" resultMap="PrivilegeMap">
         select * from privilege where parentId = #{value}
     </select>
     
 </mapper>